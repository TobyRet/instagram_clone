<% if @posts.any? %>
	<% @posts.each do |post| %>
		<div class="image-container">
			<%= image_tag post.picture.url(:medium), class: "uploaded-pic" %>
		</div>
		<div class="description-container">
			<%= post.user.username %>
			<%= post.description %>
			<%= timestamp(post.created_at) %>
		</div>
	<% end %>
<% else %>
	<h2>No Photos yet!</h2>
<% end %>
